<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loser.dao.Userdao">
    <select id="queryPasswordByName" resultType="String" parameterType="String">
        SELECT
        password
        FROM
        user
        WHERE
        username = #{username}
    </select>

    <select id="queryPasswordById" resultType="String" parameterType="int">
        SELECT
        password
        FROM
        user
        WHERE
        id = #{id}
    </select>

    <insert id="addUser" parameterType="com.loser.entity.User">
        INSERT INTO user
        (username,
        password)
        VALUES (
        #{username},
        #{password})
    </insert>

    <select id="queryUserById" parameterType="int" resultType="com.loser.entity.User">
        SELECT
          username,
          head
        FROM
          user
        WHERE
          id = #{id}
    </select>
</mapper>