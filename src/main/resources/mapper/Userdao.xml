<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loser.dao.Userdao">
    <select id="queryPasswordByName" resultType="String" parameterType="String">
        SELECT
        password
        FROM
        user
        WHERE
        username = #{username}
    </select>

    <insert id="addUser" parameterType="com.loser.entity.User">
        INSERT INTO user
        (username,
        password)
        VALUES (
        #{username},
        #{password})
    </insert>

    <select id="queryUseInforById" parameterType="int" resultType="com.loser.entity.User">
        SELECT
          id,
          username,
          realname,
          address,
          birthday,
          sex,
          intro,
          head
        FROM
          user
        WHERE
          id = #{id}
    </select>


    <!--//IGNORE 表示update语句无法执行时spring不报错，正常执行返回1否则返回0-->
    <update id="setUserInfoById" parameterType="com.loser.entity.User" >
        UPDATE IGNORE
          user
        SET
          username = #{username},
          password = #{password},
          realname = #{realname},
          address = #{address},
          birthday = #{birthday},
          sex = #{sex}
        WHERE
          id = #{id}
    </update>

    <update id="setUserIntroById">
        UPDATE IGNORE
          user
        SET
          intro = #{intro}
        WHERE
          id = #{id}
    </update>

</mapper>